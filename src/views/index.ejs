<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">

            <%- include('includes/messages') %>

            <% if(!user) { %>
                <h1 class="text-center">Olá, seja bem vindo</h1>
                <p class="text-center lead">Entre na sua conta para criar e editar suas tarefas. Caso não tenha cadastre-se</p>
            <% } else { %>
                <h1 class="text-center">Tarefas</h1>

                <div class="col-lg-2"></div>

                <% if(tarefas.length > 0) { %>
                    <div class="responsive-table">
                        <table class="table my-3">
                            <tr>
                                <th>Título</th>
                                <th>Descrição</th>
                                <th>Vencimento</th>
                            </tr>
                            <% tarefas.forEach(tarefa => { %>
                                <tr>
                                    <td><%= tarefa.titulo %></td>
                                    <td><%= tarefa.descricao %></td>
                                    <td><%= tarefa.vencimento %></td>
                                    <td><a href="/tarefa/index/<%= tarefa._id %>">Editar</a></td>
                                    <td><a href="/tarefa/delete/<%= tarefa._id %>">Excluir</a></td>
                                </tr>
                            <% }); %>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-center lead">Não existem tarefas.</p>
                <% } %>
            <% } %>

        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer'); %>
