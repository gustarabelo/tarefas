<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Conecte-se na sua conta</h1>
            <p class="text-center lead">Se houver, entre na sua conta abaixo</p>

            <%- include('includes/messages') %>

            <div class="row">
                <div class="col-lg my-3">
                    <h3>Entre na sua conta</h3>

                    <form class="form-cadastro" action="/signIn/register" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                            <label>Email:</label>
                            <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label>Senha:</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Criar minha conta</button>
                    </form>
                </div>
            </div>

        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer'); %>
