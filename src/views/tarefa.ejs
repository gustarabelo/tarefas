<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">

            <h1 class="text-center">Criar/Editar tarefa</h1>

            <%- include('includes/messages') %>

            <% if(tarefa._id) { %>
                <form action="/tarefa/edit/<%= tarefa._id %>" method="post">
            <% } else { %>
                <form action="/tarefa/register" method="post">
            <% } %>

                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <label>Título</label>
                    <input value="<%= tarefa.titulo %>" type="text" class="form-control" name="titulo">
                </div>
                <div class="form-group">
                    <label>Descrição</label>
                    <input value="<%= tarefa.descricao %>" type="text" class="form-control" name="descricao">
                </div>
                <div class="form-group">
                    <label>Vencimento</label>
                    <input value="<%= tarefa.vencimento %>" type="text" class="form-control" name="vencimento">
                </div>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </form>

        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer'); %>

